<Page x:Class="PetShope.Pages.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetShope.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
       Title="ООО «Товары для животных» - добавление или редактирование товара">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="10" Click="CancelButton_Click"></Button>
            <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Right" Margin="10" Click="SaveButton_Click"></Button>
        </Grid>
    </Grid>
</Page>
